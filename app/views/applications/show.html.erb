<h1><%= @applicant.name %>'s Application</h1>

    <h4><%= @applicant.name%>'s Information</h4>
    <p>Street Address: <%=@applicant.street_address%></p>
    <p>City: <%=@applicant.city%></p>
    <p>State: <%=@applicant.state%></p>
    <p>Zip Code: <%=@applicant.zipcode%></p>

    <h4>What makes <%=@applicant.name %> a good fit?</h4>
    <p><%=@applicant.description%></p>
    <p> Pet Names:
      <% @applicant.pets.each do |pet| %>
        <%= link_to "#{pet.name}", "/pets/#{pet.id}" %>
      <% end %>
    </p>
    <h4>Status:</h4>
    <p><%=@applicant.status%></p>


  <% if @applicant.status == "In Progress" %>
    <h4>Add Pet to Application</h4>
  <%= form_with url: "/applications/#{@applicant.id}?search=pet_name", method: :get, local: true do |form| %>
  <%= form.label :pet_name, "Pet Name: " %>
  <%= form.text_field :pet_name %>
  <%= form.submit "Search" %>
  <% end %>
  <% end %>

  <% @pets.each do |pet| %>
  <div class="pet-<%=pet.id%>">
    <%= "#{pet.name}"  %>
    <%= button_to "Adopt this Pet", "/applications/#{@applicant.id}", params: {pet: pet.id} , method: :post%>
  </div>
  <% end %>

  <hr/>
  <% if !@applicant.pets.empty? && @applicant.status == "In Progress" %>
  <h4>Submit Application</h4>
  <%= form_with url: "/applications/#{@applicant.id}", method: :patch, local: true do |form| %>
  <%= form.label :description, "What makes you a good fit for these pets?" %>
  <%= form.text_area :description %>
  <%= form.submit "Submit" %>
    <% end %>
  <% end %>
